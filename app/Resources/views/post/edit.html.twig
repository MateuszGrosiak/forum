{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post edit</h1>

    <div class="row">
        <div class="col-lg-6">
            {{ form_start(edit_form) }}
                {{ form_errors(edit_form) }}

                <div class="form-group">
                    {{ form_label(edit_form.body) }}
                    {{ form_errors(edit_form.body) }}
                    {{ form_widget(edit_form.body, {attr: {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(edit_form.thread) }}
                    {{ form_errors(edit_form.thread) }}
                    {{ form_widget(edit_form.thread, {attr: {'class': 'form-control'}}) }}
                </div>

                <input type="submit" value="Edit" class="btn btn-danger" />
            {{ form_end(edit_form) }}
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('post_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
