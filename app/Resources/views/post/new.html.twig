{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post creation</h1>

    <div class="row">
        <div class="col-lg-6">
            {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="form-group">
                    {{ form_label(form.body) }}
                    {{ form_errors(form.body) }}
                    {{ form_widget(form.body, {attr: {'class': 'form-control'}}) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.thread) }}
                    {{ form_errors(form.thread) }}
                    {{ form_widget(form.thread, {attr: {'class': 'form-control'}}) }}
                </div>

            <input type="submit" value="Create" class="btn btn-primary" />
            {{ form_end(form) }}
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('post_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
