{% extends 'base.html.twig' %}

{% block body %}
    <h1>Thread list</h1>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for thread in threads %}
            <tr>
                <td><a href="{{ path('thread_show', { 'id': thread.id }) }}">{{ thread.id }}</a></td>
                <td>{{ thread.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('thread_show', { 'id': thread.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('thread_edit', { 'id': thread.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('thread_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
