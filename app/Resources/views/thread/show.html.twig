{% extends 'base.html.twig' %}

{% block body %}
    <h1>Thread</h1>

    <div class="row">
        <div class="col-lg-6">
            <table class="table table-bordered table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ thread.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ thread.name }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <h2>Related Posts</h2>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <tr>
                    <th>Id</th>
                    <th>Body</th>
                </tr>
                {%  for post in thread.posts %}
                <tr>
                    <td>{{ post.id }}</td>
                    <td>{{ post.body }}</td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('thread_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('thread_edit', { 'id': thread.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
